@model IEnumerable<NorthwindDemoMVC.Models.Shippers>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region.RegionDescription)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <button>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </button>

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.RegionDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ShipperID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ShipperID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ShipperID })
            </td>
        </tr>
    }

</table>
