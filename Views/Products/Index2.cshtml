@model IEnumerable<NorthwindDemoMVC.Models.Products>

@{
    ViewBag.Title = "Index2";
}
<br />
<br />

<div style ="height:500px; border:2px thick" class="container">
    <h4>Products Found : @Model.Count()</h4>
    <div class="row">
        @foreach (NorthwindDemoMVC.Models.Products prod in Model)
        {

            <div class="col md-3">
                <div class="card mb-3">
                    <h3 class="card-header">@prod.ProductName  @prod.ProductID</h3>
                    <div class="card-body">
                        <h5 class="card-title">@prod.QuantityPerUnit</h5>
                        <h6 class="card-subtitle text-muted">@prod.UnitsInStock</h6>
                    </div>


                    <img style="height:200px; width:100%; display:block" src="@prod.Imagelink" alt="" />

                    <div class="card-body">
                        <p class="card-text">@prod.Suppliers.CompanyName</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Unit Price : @prod.UnitPrice.Value.ToString("c")</li>
                        <li class="list-group-item">Units on Order : @prod.UnitsOnOrder</li>
                        <li class="list-group-item">Reorder Level : @prod.ReorderLevel</li>
                    </ul>
                </div>
            </div>


        }

    </div>


</div>
